include header
include footer

mixin info
  meta(name="author" content="Phoomparin Mano")
  meta(name="description" content="Phoomparin is a full stack developer from Thailand with strong expertise in JavaScript, web and mobile application, and developing MVPs for startups.")
  meta(name="application-name" content="Phoomparin Mano")
  meta(name="apple-mobile-web-app-capable" content="yes")
  meta(name="apple-mobile-web-app-title" content="Phoomparin Mano")
  meta(name="apple-mobile-web-app-status-bar-style" content="black-translucent")
  meta(name="apple-touch-icon" href="/img/icon.png")
  meta(name="theme-color" content="#353e48")
  link(rel="icon" href="/img/favicon.ico")
  link(rel="icon" sizes="192x192" href="/img/icon.png")
  link(rel="shortcut icon" href="/img/icon.png")
  link(rel="manifest" href="/manifest.json")
  link(rel="canonical" href="https://phoom.in.th")

mixin styles
  link(rel="stylesheet" href="/css/main.css")

mixin fonts
  link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:300,400")
  link(rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons")
