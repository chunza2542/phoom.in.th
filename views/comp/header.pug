- var pages = {"/": "about me", "/resume": "resume", "/labs": "works", "/startup": "hire", "https://medium.com/@phoomparin": "blog", "/contact": "contact"}

mixin links(current)
  each name, link in pages
    li(class=link === current ? "active" : "")
      a(href=link target=link.startsWith("https://") ? "_blank" : "")= name

mixin nav(page)
  .hide-on-large-only
    a.button-collapse(data-activates="mobile-nav")
      i.material-icons menu
    ul.nav-links.side-nav#mobile-nav
      +links(page)
  nav.hide-on-med-and-down
    .nav-wrapper
      a.brand-logo(href="/")
        span PHOOMPARIN
        b MANO
      ul.nav-links.right
        +links(page)

mixin header(page)
  header.landing.white-text.z-depth-1
    img.circle.responsive-img(src="/img/me.jpg")
    h1
      span PHOOMPARIN
      b MANO
    h2 Full Stack Developer
    +nav(page)
